[loggers]
keys = root, create_spark, validate, ingest , transformation

[handlers]
keys = consoleHandler, fileHandler

[formatters]
keys = sampleFormatter

[logger_root]
level = DEBUG
handlers = consoleHandler, fileHandler

[logger_create_spark]
level = INFO
handlers = fileHandler
qualname = create_spark
propagate = 0

[logger_validate]
level = WARN
handlers = fileHandler
qualname = validate
propagate = 0

[handler_consoleHandler]
class = StreamHandler
level = DEBUG
formatter = sampleFormatter
args = (sys.stdout,)

[handler_fileHandler]
class = logging.FileHandler
level = DEBUG
formatter = sampleFormatter
args = ('application.log',)

[logger_ingest]
level = INFO
handlers = fileHandler
qualname = ingest
propagate = 0

[logger_transformation]
level = INFO
handlers = fileHandler
qualname = transformation
propagate = 0

[logger_extraction]
level = INFO
handlers = fileHandler
qualname = extraction
propagate = 0

[formatter_sampleFormatter]
format = %(asctime)s - %(name)s - %(levelname)s - %(message)s


