[loggers]
keys = root, create_spark, validate, ingest, transformation, extraction

[handlers]
keys = fileHandler, consoleHandler

[formatters]
keys = sampleFormatter

[logger_root]
level = DEBUG
handlers = fileHandler, consoleHandler

[logger_create_spark]
level = INFO
handlers = fileHandler
qualname = create_spark
propagate = 1

[logger_validate]
level = WARN
handlers = fileHandler
qualname = validate
propagate = 1

[logger_ingest]
level = INFO
handlers = fileHandler
qualname = ingest
propagate = 1

[logger_transformation]
level = INFO
handlers = fileHandler
qualname = transformation
propagate = 1

[logger_extraction]
level = INFO
handlers = fileHandler
qualname = extraction
propagate = 1

[handler_fileHandler]
class = logging.FileHandler
level = DEBUG
formatter = sampleFormatter
args = ('application.log',)

[handler_consoleHandler]
class = StreamHandler
level = DEBUG
formatter = sampleFormatter
args = (sys.stdout,)

[formatter_sampleFormatter]
format = %(asctime)s - %(name)s - %(levelname)s - %(message)s


